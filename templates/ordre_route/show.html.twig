{% extends 'base.html.twig' %}

{% block title %}OrdreRoute{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' with
        {
            bc_title : 'Enregistrement ordre de route'|trans,
        } %}
    <!-- Page content -->
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <div class="table-responsive py-4 ">
                            <div class="section-head">
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                État de compte des indemnités de mission au nom de
                                « {{ ordre_route.user.username ~' '~ ordre_route.user.prenom }} »
                                « corps: {{ document_recrutement.corps }} , grade:{{ document_recrutement.grade }} et
                                indice actuels : {{ document_recrutement.indice }} »
                            </div>
                            <br>
                            <table class="table table-bordered">
                                {% set duree = ordre_route.dureeMission|split('et') %}
                                <tr>
                                    <th>Numéro OR</th>
                                    <th>Date OR</th>
                                    <th>Objet mission</th>
                                    <th>Début mission</th>
                                    <th>Fin mission</th>
                                    <th>Durée mission</th>
                                    <th>Décompte OR</th>
                                    <th>Montant OR</th>
                                </tr>
                                <tr>
                                    <td>{{ ordre_route.numOr }}</td>
                                    <td>{{ ordre_route.dateOr }}</td>
                                    <td>{{ ordre_route.objetMission }}</td>
                                    <td>{{ ordre_route.dateDebutMission|replace({'T':' à '}) }}</td>
                                    <td>{{ ordre_route.dateDebutMission|replace({'T':' à '}) }}</td>
                                    <td>{{ ordre_route.dureeMission }}</td>
                                    <td>
                                        {% for key,d in duree %}
                                            <span> {{ d }}
                                                {% if 'N' in d %}
                                                    {% if d != " " %}
                                                        {% if ordre_route.indice < 800 %}
                                                            {{ 'x 30 000 = '~ ordre_route.montantN|number_format(0,'',' ') }}
                                                        {% else %}
                                                            {{ 'x 36 000 = '~ ordre_route.montantN|number_format(0,'',' ') }}
                                                        {% endif %}
                                                    {% endif %}
                                                {% else %}
                                                    {% if d != " " %}
                                                        {% if ordre_route.indice < 800 %}
                                                            {{ 'x 10 000 = '~ ordre_route.montantP|number_format(0,'',' ') }}
                                                        {% else %}
                                                            {{ 'x 12 000 = '~ ordre_route.montantP|number_format(0,'',' ') }}
                                                        {% endif %}
                                                    {% endif %}
                                                {% endif %}
                                            </span>
                                            <br>
                                        {% endfor %}
                                    </td>
                                    <td>{{ ordre_route.decompteOr|number_format(0,'',' ') }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
