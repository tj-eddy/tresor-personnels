{% extends 'base.html.twig' %}

{% block title %}OrdreRoute{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' with
        {
            bc_title : 'Enregistrement ordre de route'|trans,
        } %}
    <!-- Page content -->
    <div class="container-fluid mt--6">
        <div class="row">
            <div class="col">
                <div class="card">
                    <!-- Card header -->
                    <div class="card-header border-0">
                        <div class="table-responsive py-4 ">
                            <table class="table table-bordered">
                                <tbody>
                                <tr>
                                    <th>Numéro</th>
                                    <td>{{ ordre_route.numOr }}</td>
                                </tr>
                                <tr>
                                    <th>Date OR</th>
                                    <td>{{ ordre_route.dateOr }}</td>
                                </tr>
                                <tr>
                                    <th>Objet de mission</th>
                                    <td>{{ ordre_route.objetMission }}</td>
                                </tr>
                                <tr>
                                    <th>Date du début</th>
                                    <td>{{ ordre_route.dateDebutMission|replace({'T':' à '}) }}</td>
                                </tr>
                                <tr>
                                    <th>Date du fin</th>
                                    <td>{{ ordre_route.dateFinMission|replace({'T':' à '}) }}</td>
                                </tr>
                                <tr>
                                    <th>Durée du mission</th>
                                    <td>{{ ordre_route.dureeMission }}</td>
                                </tr>
                                <tr>
                                    <th>Décompte OR</th>
                                    <td>{{ ordre_route.decompteOr }} Ar</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        {% if not is_granted('ROLE_SUPERADMIN') %}
                            {{ include('ordre_route/_delete_form.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
