{{ form_start(form) }}
<div class="form-group">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <br>
                {{ form_row(form.username) }}
                <br>
                {{ form_row(form.dateNaissance) }}
                <br>
                {{ form_row(form.email) }}
                <br>
                {{ form_row(form.cin) }}
                {% if is_granted('ROLE_SUPERADMIN') %}
                <br>
                {{ form_row(form.dateStartService) }}
                {% endif %}
            </div>
            <div class="col-6">
                {% if not is_granted('ROLE_SUPERADMIN') %}
                    {{ form_row(form.password) }}
                {% endif %}
                <br>
                {{ form_row(form.profil) }}
                <br>
                {{ form_row(form.congeInitial) }}
                <br>
                {% if is_granted('ROLE_SUPERADMIN') %}
                <div class="row">
                    <div class="col-5">
                        <label class="form-control-label"
                               for="example3cols1Input">Num√©ro matricule ?</label>
                        <div class="row">
                            <div class="col">
                                <div class="custom-control custom-radio mb-3">
                                    <input checked name="hasmatricule" class="custom-control-input" value="0"
                                           id="customRadio11"
                                           type="radio">
                                    <label class="custom-control-label"
                                           for="customRadio11">{{ 'no'|trans }}</label>
                                </div>
                            </div>
                            <div class="col">
                                <div class="custom-control custom-radio mb-3">
                                    <input name="hasmatricule" class="custom-control-input" value="1"
                                           id="customRadio12"
                                           type="radio">
                                    <label class="custom-control-label"
                                           for="customRadio12">{{ 'yes'|trans }}</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        {{ form_row(form.matricule) }}
                    </div>
                </div>
                <br>
               <div class="row">
                   <div class="col-5">
                       <label class="form-control-label"
                              for="example3cols1Input">Enfant(s) ?</label>
                       <div class="row">
                           <div class="col">
                               <div class="custom-control custom-radio mb-3">
                                   <input checked name="childnumber" class="custom-control-input" value="0"
                                          id="customRadio9"
                                          type="radio">
                                   <label class="custom-control-label"
                                          for="customRadio9">{{ 'no'|trans }}</label>
                               </div>
                           </div>
                           <div class="col">
                               <div class="custom-control custom-radio mb-3">
                                   <input name="childnumber" class="custom-control-input" value="1"
                                          id="customRadio10"
                                          type="radio">
                                   <label class="custom-control-label"
                                          for="customRadio10">{{ 'yes'|trans }}</label>
                               </div>
                           </div>
                       </div>
                   </div>
                   <div class="col">
                       {{ form_row(form.childNumber) }}
                   </div>
               </div>
                {% endif %}

            </div>

            </div>
            {% if app.user.Profil %}
                <img width="300" height="300" alt="Image placeholder"
                     src="{{ asset('/uploads/' ~ app.user.Profil) }}">
            {% else %}
                <div class="kl-preview d-none">
                    <img width="300" height="300" id="id-preview" src="#" alt="profil"/>
                </div>
            {% endif %}
        </div>
    </div>

<div class="form-group">
    <div class="card-body">
        <button class="btn btn-primary">{{ action_type == 'edit' ?  'update'|trans : 'save'|trans }}</button>
    </div>
</div>
</div>
{{ form_end(form) }}
