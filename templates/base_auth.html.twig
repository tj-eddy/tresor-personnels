<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
        <!-- Favicon -->
        <link rel="icon" href="{{ asset('img/logo.PNG') }}" type="image/png">
        <!-- Fonts -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
        <!-- Icons -->
        <link rel="stylesheet" href="{{ asset('assets/vendor/nucleo/css/nucleo.css') }}" type="text/css">
        <link rel="stylesheet" href="{{ asset('assets/vendor/@fortawesome/fontawesome-free/css/all.min.css') }}"
              type="text/css">
        <!-- Argon CSS -->
        <link rel="stylesheet" href="{{ asset('assets/css/argon.css') }}" type="text/css">
    {% endblock %}
</head>
<body class="bg-default">
<!-- Main content -->
<div class="main-content">
    <!-- Header -->
    <div class="header bg-default py-7 py-lg-8 pt-lg-9"></div>
    <!-- Page content -->
    <div class="container mt--8 pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="card bg-secondary border-0 mb-0">
                    <div class="card-body px-lg-5 py-lg-5">
                        <div style="text-align: center;">
                            <img width="150" height="60" src="{{ asset('img/logo.PNG') }}" alt="">
                        </div>
                        <div class="text-center text-muted mb-4">
                            <small>
                                {% if login_page is defined %}
                                    {{ 'sign.in'|trans }}
                                {% else %}
                                    {{ 'reset.password'|trans }}
                                {% endif %}
                            </small>
                        </div>
                        {% if error is defined and error.messageKey is defined %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        {% block body %}{% endblock %}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        {% if return_link_show is defined %}
                            <a href="{{ path('app_login') }}" class="text-light">
                                <small>{{ 'return'|trans }}</small>
                            </a>
                        {% endif %}
                    </div>
                    <div class="col-6 text-right">
                        {% if reset_password_link_show is defined %}
                            <a href="{{ path('app_forgot_password_request') }}" class="text-light">
                                <small>{{ 'reset.password'|trans }}</small>
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/js-cookie/js.cookie.js') }}"></script>
    <script src="{{ asset('assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/lavalamp/js/jquery.lavalamp.min.js') }}"></script>
    <!-- Argon JS -->
    <script src="{{ asset('assets/js/argon.js') }}"></script>
{% endblock %}
</body>
</html>
